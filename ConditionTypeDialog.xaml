<Window x:Class="AutoXHGM_Skill.ConditionTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择条件类型" Height="200" Width="300" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="请选择要添加的条件类型:" Margin="10" FontSize="14"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="颜色条件" Width="100" Margin="5" Click="ColorCondition_Click"/>
                <Button Content="OCR条件" Width="100" Margin="5" Click="OcrCondition_Click"/>
            </StackPanel>
            <Button Content="取消" Width="80" Margin="10" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>