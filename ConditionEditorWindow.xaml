<Window x:Class="Skill_Loop.ConditionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skill_Loop"
        mc:Ignorable="d"
        Title="编辑条件" Height="550" Width="800">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="技能条件编辑" FontSize="16" FontWeight="Bold" Margin="10"/>
        <DataGrid Grid.Row="1" x:Name="dgConditions" AutoGenerateColumns="False" 
                  ItemsSource="{Binding Conditions}" Margin="10"
            MouseDoubleClick="DgConditions_MouseDoubleClick" SelectionChanged="DgConditions_SelectionChanged">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="跳过规则" Binding="{Binding IsSkipCondition}" Width="80"/>

                <!-- X坐标列 -->
                <DataGridTemplateColumn Header="X" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding OffsetX}" 
                                           Visibility="{Binding IsOcrCondition, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding OcrRegionX}" 
                                           Visibility="{Binding IsOcrCondition, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Y坐标列 -->
                <DataGridTemplateColumn Header="Y" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding OffsetY}" 
                                           Visibility="{Binding IsOcrCondition, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding OcrRegionY}" 
                                           Visibility="{Binding IsOcrCondition, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- OCR区域列 -->
                <DataGridTemplateColumn Header="OCR区域" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                        Visibility="{Binding IsOcrCondition, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="W:" Margin="2,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding OcrRegionWidth, Mode=TwoWay}" Width="30" Margin="2,0"/>
                                <TextBlock Text="H:" Margin="2,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding OcrRegionHeight, Mode=TwoWay}" Width="30" Margin="2,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 条件值列 (OCR文本或颜色) -->
                <DataGridTemplateColumn Header="条件值" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- OCR文本输入框 -->
                                <TextBox Text="{Binding OcrTextToMatch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="140" Margin="2"
                                         Visibility="{Binding IsOcrCondition, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <!-- 颜色显示 -->
                                <Border Background="{Binding ColorBrush}" BorderBrush="Gray" 
                                        BorderThickness="1" CornerRadius="3" Margin="2" 
                                        Height="20" Width="100"
                                        Visibility="{Binding IsOcrCondition, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding TargetColorHex}" HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" Foreground="{Binding TextColor}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 阈值列 (相似度或容差) -->
                <DataGridTemplateColumn Header="阈值" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- OCR相似度 -->
                                <TextBox Text="{Binding OcrSimilarityThreshold, Mode=TwoWay}" Width="40" Margin="2"
                                         Visibility="{Binding IsOcrCondition, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <!-- 颜色容差 -->
                                <TextBox Text="{Binding Tolerance, Mode=TwoWay}" Width="40" Margin="2"
                                         Visibility="{Binding IsOcrCondition, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="操作" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="删除" Click="DeleteCondition_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

            <Button Content="添加条件" Width="100" Click="AddCondition_Click" Margin="5"/>
            <Button Content="保存" Width="100" Click="Save_Click" Margin="5"/>
            <Button Content="取消" Width="100" Click="Cancel_Click" Margin="5"/>

            <!-- OCR测试区域 -->
            <Button Content="测试OCR" Width="80" Click="TestOcr_Click" Margin="5" x:Name="btnTestOcr"/>
            <TextBox x:Name="txtOcrResult" Width="150" Margin="5" IsReadOnly="True" 
                     ToolTip="OCR识别结果将显示在这里"/>

            <Border x:Name="borderCurrentColor" 
                    Width="30" Height="30" 
                    BorderBrush="Black" BorderThickness="1"
                    Margin="5"/>
            <TextBlock x:Name="tbCurrentColor" 
                       VerticalAlignment="Center" 
                       Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>